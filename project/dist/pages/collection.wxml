
  <view class="globalmargin">
    <view class="row">
      <navigator class="input" url="./search" open-type="navigate">
        <view src="{{}}">🔍 搜索</view>
      </navigator>
      <view class="QRcode" src="{{}}"/>
    </view>

    <view class="row spacebetween margin">
      <view class="size column" style="position:relative;">
        <view class="column" style="position: absolute;">
          <text style="color: white; letter-space: 15px;">与动物</text>
          <text style="color: white; font-size: .6rem;">with animal</text>
        </view>
        <image style="width:100%; height:100%;" src="{{left}}"/>
      </view> 
    <view class="size column" style="position:relative;">
        <view class="column" style="position: absolute;">
          <text style="color: white; letter-space: 15px;">与自然</text>
          <text style="color: white; font-size: .6rem;">with environment</text>
        </view>
        <image style="width:100%; height:100%;" src="{{right}}"/>
      </view>
    </view>

    <view class="row">
      <view class="line"/>
      <text class="classify" style="word">分类</text>
      <view class="line"/>
    </view>

    <view class="display">
      <view  wx:for="{{box}}" wx:key="index" id="{{index}}" class="row spacebetween" style="position:relative;">
        <text style="color: white; position: absolute; top: 0; margin: 5% 0 0 10%;">{{item.title}}</text>
        <image mode="widthFix" class="imgsize" src="{{item.icon}}"/>
      </view>
    </view>

  </view>
