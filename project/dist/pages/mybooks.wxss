
.display {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.global {
  background-size: 100% 100%;
  margin-left: 2.5%;
  margin-right: 2.5%;
}
.line {
  height: 1px; 
  width: 100%;
  background-color:#e6e6e6;
}

.row {
  /* display: flex; */
  align-items: center;
  justify-content: center;
}
.column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.text {
  display: -webkit-box;
  overflow: hidden;
  flex-wrap: wrap;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 0.8rem;
  color: gray;
}
