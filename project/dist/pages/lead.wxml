
<view class="global">
  <view class="card contentcolumn" style="margin-top: 1px;"  wx:for="{{lead}}" wx:key="index" id="{{index}}" data-index="{{index}}">

      <view class="row authorview margin" bindtap="author">
        <image class="authorAvator" src="{{item.avatarUrl}}"/>
        <text style="font-size:15px;">{{item.authorName}}</text>
      </view>

      <view class="columncenter margin" bindtap="leadcontent">
        <image class="imgsize" style="border-radius: 0.3rem;" src="{{item.icon}}"/>
      </view>

      <view class="margin">
        <text class="label" style="color: white;">{{item.label}}</text>
        <text class="text" bindtap="leadcontent">{{item.title}}</text>
      </view>

      <text class="margin textcontent" style="font-size: 17px; color: #8a8a8a;" bindtap="leadcontent">{{item.text}}</text>

      <view class="row margin" style="justify-content: space-between; margin-bottom: 2.5%;">
        <view class="row" style="color: #bfbfbf;" bindtap="leadcontent">
          <view class="bottomfont">{{item.tapnumber}}点击</view>
          <view class="bottomfont">·{{item.relevant}}</view>
        </view>
        <view class="row flexend bottomfont" bindtap="like" data-index="{{index}}">
          <view class="bottomfont" style="color:{{color[index]}}">{{item.like}}</view>
          <image style="margin-left: 0.4rem; height: 0.7rem; width: 0.7rem; color:{{color[index]}};" src="{{imglike[index]}}"/>
        </view>
      </view>

  </view>
</view>